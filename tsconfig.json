{
  "compilerOptions": {
    "baseUrl": "./",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "jsx": "react",
    "lib": ["dom", "esnext"],
    "module": "esnext",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./build",
    "paths": { "*": ["src/*", "node_modules/*"] },
    "rootDir": "./src",
    "sourceMap": true
  },
  "exclude": [
    "test",
    "build",
    "coverage",
    "node_modules"
  ],
  "include": [
    "src"
  ]
}
