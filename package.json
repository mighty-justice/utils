{
  "name": "@mighty-justice/utils",
  "version": "0.0.1",
  "description": "Standardization of small utilities across Mighty",
  "main": "dist/utils.cjs.js",
  "module": "dist/utils.esm.js",
  "browser": "dist/utils.umd.js",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -r dist/*",
    "build:types": "yarn tsc --emitDeclarationOnly",
    "build:js": "rollup -c",
    "build": "npm run build:types && npm run build:js",
    "dev": "rollup -c -w",
    "lint": "tslint --project .",
    "test": "jest",
    "test:watch": "npm run test/*.js -- -w",
    "prebuild": "npm run lint",
    "predeploy": "npm run build && npm run docs:build",
    "deploy": "gh-pages -d _book",
    "docs:prepare": "gitbook install",
    "docs:build": "npm run docs:prepare && gitbook build",
    "docs:watch": "npm run docs:prepare && gitbook serve",
    "view-source-map": "source-map-explorer --html dist/index.js dist/index.map > source.html && open source.html",
    "release": "np"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mighty-justice/utils.git"
  },
  "keywords": [
    "javascript",
    "typescript",
    "utils",
    "formatting"
  ],
  "author": "Mighty",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mighty-justice/utils/issues"
  },
  "homepage": "https://mighty-justice.github.io/utils/",
  "jest": {
    "testPathIgnorePatterns": [
      "/_book/",
      "/node_modules/"
    ],
    "transform": {
      "^.+\\.(js|jsx|ts|tsx)$": "babel-jest"
    },
    "moduleFileExtensions": [
      "js",
      "jsx",
      "ts",
      "tsx"
    ],
    "setupTestFrameworkScriptFile": "./test/setup.js",
    "testURL": "http://localhost/"
  },
  "files": [
    "dist",
    "index.js"
  ],
  "peerDependencies": {
    "lodash": "4",
    "react": "16"
  },
  "resolutions": {
    "babel-core": "7.0.0-bridge.0"
  },
  "devDependencies": {
    "@babel/core": "^7.2.0",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-decorators": "^7.2.3",
    "@babel/plugin-proposal-export-default-from": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "^7.0.0",
    "@babel/preset-typescript": "^7.1.0",
    "@mighty-justice/tslint-config": "^0.3.0",
    "@types/lodash": "^4.14.119",
    "@types/numeral": "^0.0.25",
    "@types/react": "16.7.18",
    "babelrc-rollup": "^3.0.0",
    "coveralls": "^3.0.2",
    "gh-pages": "^2.0.1",
    "gitbook-cli": "^2.3.2",
    "gitbook-plugin-anchorjs": "^2.1.0",
    "gitbook-plugin-search-plus": "^1.0.4-alpha-3",
    "iso8601-duration": "^1.1.6",
    "jest": "^23.6.0",
    "jest-environment-jsdom": "^23.4.0",
    "lodash": "4.17.11",
    "np": "^3.1.0",
    "numeral": "^2.0.6",
    "react": "16.7.0",
    "regenerator-runtime": "^0.13.1",
    "rollup": "^0.68.1",
    "rollup-plugin-babel": "^4.0.3",
    "rollup-plugin-commonjs": "^9.2.0",
    "rollup-plugin-json": "^3.1.0",
    "rollup-plugin-node-resolve": "^4.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.0",
    "source-map-explorer": "^1.6.0",
    "tslint": "^5.11.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "date-fns": "^1.30.1",
    "html-react-parser": "0.6.0",
    "iso8601-duration": "^1.1.6",
    "numeral": "^2.0.6"
  }
}
